      </form>
    <% else %>
      <button class="btn btn-success" type="button"><span class="glyphicon glyphicon-heart"></span></button>
      <a href="#">Likes: <span class="badge"><%= @article.likes.count %></span></a>
    <% end %>
  </div>

  <!-- USERS POST A COMMENT HERE -->
  <% if current_user %>
    <div class="container-fluid">
      <form method="post" action="/articles/<%= @article.id %>/comments" class="form-inline">
        <div class="form-group">
          <button type="submit" class="btn btn-info">Post</button>
        </div>
        <div class="form-group" class="col-md-12" style="width:70%">
          <textarea class="form-control" rows="2" style="width:100%" id="comment" name="comment" placeholder="Share your thoughts about this article!"></textarea>
        </div>
      </form>
    </div>
  <% end %>

  <!-- SHOWS USER COMMENTS -->
  <div>
    <% if @article.comments.length == 0 %>
      <p>Be the first to add a comment</p>
    <% end %>
    <% @article.comments.each do |comment| %>
      <table class="table table-striped">
        <p>
          <td class="success" width=10%><%= comment.user.username %> </td>
          <td class="info" ><%= comment.comment %> </td>
        </p>
      </table>
    <% end %>
  </div>
</div>