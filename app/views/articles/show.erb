<!-- THIS PAGE DISPLAYS THE INDIVIDUAL ARTICLE'S INFO -->
<div class="container-fluid" id="articlepage">
  <div>
    <h1><%= @article.title %><h1>
  </div>

  <div class="container-fluid">
    <div>
      <h5> Posted by: <%= @article.user.username %> | <%= @article.created_at.strftime("%B %d, %Y") %> | <a href="<%= @article.url %>">Link To Article</a></h5>
    </div>

    <div class="row">

      <!-- 'BOOKMARKS' BUTTON -->
      <div class="col-md-1" style="height:40px">
        <% if current_user && current_user.hasnt_bookmarked?(@article) %>
          <form method="POST" action="/articles/<%= @article.id %>/bookmarks">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-bookmark"></span></button>
          </form>
        <% else %>
          <form method="POST" action="/articles/<%= @article.id %>/bookmarks/delete">
            <button class="btn btn-success" type="submit"><span class="glyphicon glyphicon-bookmark"></span></button>
          </form>
        <% end %>
      </div>

      <!-- 'LIKES' BUTTON -->
      <div class="col-md-2">
        <% if current_user && current_user.hasnt_liked?(@article) %>
          <form method="POST" action="/articles/<%= @article.id %>/likes">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-heart"></span></button>
            <span>Likes: <span class="badge"><%= @article.likes.count %></span></span>
          </form>
        <% else %>
          <form method="POST" action="/articles/<%= @article.id %>/likes/delete">
            <button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-heart"></span></button>
            <span>Likes: <span class="badge"><%= @article.likes.count %></span></span>
          </form>
        <% end %>
      </div>
    </div>
  </div>

  <!-- ARTICLE IMAGE AND SUMMARY -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6" id="articleimage">
        <img src="<%= @article.image %>" alt="<%= @article.title %>"/>
      </div>
      <div class="col-md-6"><%= @article.summary %></div>
    </div>
  </div>

  <!-- USERS POST A COMMENT HERE -->
  <% if current_user %>
    <div class="container-fluid">
      <form method="post" action="/articles/<%= @article.id %>/comments" class="form-inline">
        <div class="form-group" class="col-md-12" style="width:70%">
          <textarea class="form-control" rows="2" style="width:100%" id="comment" name="comment" placeholder="Share your thoughts about this article!"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-info btn-lg">Post</button>
        </div>
      </form>
    </div>
  <% end %>

  <!-- SHOWS USER COMMENTS -->
  <div class="container_fluid">
    <% if @article.comments.length == 0 %>
      <p>Be the first to add a comment</p>
    <% end %>
    <% @article.comments.each do |comment| %>
      <table class="table table-striped">
        <p>
          <td class="success" width=15%>
            <%= comment.user.username %><br>
            <em><font size="1">Posted <%= comment.user.created_at.strftime("%b %d, %Y")%></font></em>
          </td>
          <td class="info" >
            <%= comment.comment %>
          </td>
        </p>
      </table>
    <% end %>
  </div>
</div>