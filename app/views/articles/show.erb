<!-- THIS PAGE DISPLAYS THE INDIVIDUAL ARTICLE'S INFO -->
<div class="container-fluid" id="articlepage">
  <div>
    <%= @article.title %>
  </div>

  <div>
    Posted by: <%= @article.user_id %> | <%= @article.created_at.strftime("%B %d, %Y") %>
  </div>

  <div>
    <a href="<%= @article.url %>">Link To Article</a>
    <!-- Logos to share with friends: email, facebook, twitter -->
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6"><img src="<%= @article.image %>" alt="<%= @article.title %>"/></div>
      <div class="col-md-6"><%= @article.summary %></div>
    </div>
  </div>

  <!-- 'LIKES' BUTTON -->
  <div>
    <% if current_user && current_user.hasnt_liked?(@article) %>
